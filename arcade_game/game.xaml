<Window x:Class="WpfApp1.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Game" Height="800" Width="500" Closing="QuitGame">
    <Canvas x:Name="game" KeyDown="game_KeyDown" KeyUp="game_KeyUp" Focusable="True">

        <Rectangle x:Name="Player1"
                   Fill="Blue"
                   Tag="player"
                   Height="50"
                   Width="50"
                   Canvas.Left="423"
                   Canvas.Top="456"/>
        <Rectangle x:Name="Player2"
                   Fill="red"
                   Tag="player"
                   Height="50"
                   Width="50"
                   Canvas.Left="65"
                   Canvas.Top="577" />
        <Rectangle x:Name="platoform2" 
                   Tag="platform" 
                   Fill="Yellow" 
                   Height="50" Width="300" 
                   Canvas.Left="100" Canvas.Top="500"/>
        <Rectangle x:Name="platoform1" 
                   Tag="platform" 
                   Fill="Orange" 
                   Height="50" Width="300" 
                   Canvas.Left="148" Canvas.Top="680"/>

    </Canvas>
</Window>

